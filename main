#!/usr/bin/env python3.6
import time
from lib.network import Ai
from lib.render  import Render
from lib.log     import Logger
ai     = Ai()
render = Render()
logger = Logger()

renderGame = False
totalGames = 200
sleepTime  = 1

#game set 
for games in range(totalGames):
    from lib.game import Game
    game   = Game()

    possibleDirections = ai.possibleDirections(game.board.board)
    if renderGame == True: render.board(game.board.board, game.score)
    
    #single game
    while game.gameOver(possibleDirections) == False:
        move = ai.randomMovement(possibleDirections)
        time.sleep(sleepTime)
            
        if renderGame == True: render.move(move)
       
        boardCopy = game.board.board
        game.setMovement(move)
        ai.determineMovementSucces(boardCopy, game.board.board, move, game.score)
            
        if renderGame == True: render.board(game.board.board, game.score)
        
        possibleDirections = ai.possibleDirections(game.board.board)
        
    print(games)

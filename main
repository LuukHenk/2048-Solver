#!/usr/bin/env python3.6
import time
from lib.ai     import Ai
from lib.render import Render
from lib.log    import Logger
ai     = Ai()
render = Render()
logger = Logger()

renderGame = True
totalGames = 200
sleepTime  = 1

#game set 
for games in range(totalGames):
    from lib.game import Game
    game   = Game()

    possibleDirections = ai.possibleDirections(game.board.board)
    if renderGame == True: render.board(game.board.board)
    
    #single game
    while game.gameOver(possibleDirections) == False:
        move = ai.randomMovement(possibleDirections)
        if renderGame == True: 
            time.sleep(sleepTime)
            render.move(move)
        game.setMovement(move)
        if renderGame == True: render.board(game.board.board)
        possibleDirections = ai.possibleDirections(game.board.board)
    print(games)

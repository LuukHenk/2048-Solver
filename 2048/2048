#!/usr/bin/env python3 # pylint: disable=C0103
"""The executable script"""

from lib.presentation_layer.main_window import run_main_window
from lib.player.player import Player


def main():
    """Main script of the program"""

    args = {
        "use_old_games": True,
        "total_games": 1000,
        "sleep_time": 0.00000000000000000000000001,
    }

    player = Player()
    player.play_games(args["total_games"], args["use_old_games"])

    run_main_window(args["sleep_time"])


if __name__ == "__main__":
    main()
